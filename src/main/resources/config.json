{
  "roles": [
    "USER",
    "ADMIN"
  ],
  "server": {
    "address": "http://localhost:8080",
    "cors": {
      "origins": [
        "*"
      ]
    }
  },
  "defaultRoleIndex": 0,
  "passwordResetTokenExpirationHours": 2,
  "signUpTokenExpirationHours": 2,
  "security": {
    "login": {
      "maxAttempts": 3,
      "attemptTimeoutMinutes": 3,
      "patterns": [
        {
          "pattern": "[a-zA-Z]+",
          "message": "Login must contain any letters"
        }
      ]
    },
    "password": {
      "patterns": [
        {
          "pattern": "[0-9]+",
          "message": "Password must contain numbers"
        },
        {
          "pattern": "[A-Z]+",
          "message": "Password must contain capital letters"
        },
        {
          "pattern": "[a-z]+",
          "message": "Password must contain lower-case letters"
        },
        {
          "pattern": "(?:\\!|\\@|\\#|\\$|\\%|\\&|\\*|\\(|\\)|\\'|\\+|\\,|\\-|\\.|\\/|\\:|\\;|\\<|\\=|\\>|\\?|\\[|\\]|\\^|\\_|\\`|\\{|\\||\\})+",
          "message": "Password must contain special characters"
        }
      ]
    }
  },
  "assignments": {
    "storage": {
      "isEnabled": true,
      "fields": [
        {
          "name": "permission",
          "default": "USER",
          "options": [
            "USER",
            "ADMIN"
          ]
        }
      ]
    }
  }
}